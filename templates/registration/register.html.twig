{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h2 class="text-center mb-5">
      <span class="badge badge-secondary">Ajouter un utilisateur:</span>
  </h2>
	<div class="container d-flex justify-content-center">
		{{ form_start(registrationForm) }}
			<div class="row">
				<div class="col-md-6">
					{{ form_row(registrationForm.name) }}
				</div>
				<div class="col-md-6">
					{{ form_row(registrationForm.username) }}
				</div>
			</div>
			{{ form_row(registrationForm.plainPassword, {
				label: 'Mot de Passe:'
			}) }}
			{{ form_row(registrationForm.roles) }}
      <input type="submit" value="Ajouter utilisateur" class="btn btn-primary btn-block" formnovalidate>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
