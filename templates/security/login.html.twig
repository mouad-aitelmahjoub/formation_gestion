{% extends 'base.html.twig' %}

{% block title %}JoyCall - Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous étes connecté comme: {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnecter?</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal ">JoyCall - Connexion</h1>
                <label for="inputUsername">Login :</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                <label for="inputPassword" class="mt-3">Mot de passe:</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">
                    Se connecter <i class="fas fa-sign-in-alt"></i>
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
